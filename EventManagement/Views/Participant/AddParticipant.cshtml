@model EventManagement.Models.AddParticipant
@{
    ViewData["Title"] = "Add Participant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Katılımcı Ekle</h1>

    <form asp-action="AddParticipant" asp-controller="Participant" method="post">
        <input type="hidden" asp-for="EventId" />
        <div class="form-group">
            <label for="FirstName">Adı:</label>
            <input asp-for="FirstName" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="LastName">Soyadı:</label>
            <input asp-for="LastName" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Email">E-posta:</label>
            <input asp-for="Email" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Katılımcı Ekle</button>
    </form>
</div>
